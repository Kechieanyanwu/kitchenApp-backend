{
  "name": "kitchenapp",
  "version": "1.0.0",
  "description": "Kitchen Inventory Management",
  "main": "src/index.js",
  "directories": {
    "test": "src/test"
  },
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha 'src/test/*.js'",
    "pretest": "cross-env NODE_ENV=test npm run db:reset",
    "db:reset": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all --seeders-path ./database/seeders/test",
    "db:create:test": "cross-env NODE_ENV=test npx sequelize-cli db:create",
    "start": "node src/index.js",
    "startdev": "nodemon src/index.js",
    "migrate": "npx sequelize-cli db:migrate",
    "build": "webpack",
    "prod": "node dist/final.js"
  },
  "author": "Nkechi Anyanwu",
  "license": "ISC",
  "devDependencies": {
    "ajv": "^8.12.0",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.4.0",
    "chai-json-schema-ajv": "^5.2.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^0.7.4",
    "eslint-plugin-import": "^2.29.1",
    "jest": "^29.7.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sequelize": "^6.35.1",
    "sequelize-cli": "^6.6.2",
    "sinon": "^16.1.0",
    "supertest": "^6.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-session-sequelize": "^7.1.7",
    "cors": "^2.8.5",
    "email-validator": "^2.0.4",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3"
  }
}
